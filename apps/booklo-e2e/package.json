{
  "name": "booklo-web-e2e",
  "version": "1.0.0",
  "description": "End-to-end tests for Booklo web application using Playwright and Cucumber",
  "scripts": {
    "test": "cucumber-js",
    "test:headless": "HEADLESS=true cucumber-js",
    "test:headed": "HEADLESS=false cucumber-js",
    "test:debug": "DEBUG=true HEADLESS=false cucumber-js",
    "test:chrome": "BROWSER=chromium cucumber-js",
    "test:firefox": "BROWSER=firefox cucumber-js",
    "test:webkit": "BROWSER=webkit cucumber-js",
    "test:parallel": "cucumber-js --parallel 2",
    "test:tag": "cucumber-js --tags",
    "test:dry-run": "cucumber-js --dry-run",
    "test:watch": "nodemon --exec \"cucumber-js\"",
    "test:watch:headed": "nodemon --exec \"HEADLESS=false cucumber-js\"",
    "test:allure": "cucumber-js --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter",
    "test:headless:allure": "HEADLESS=true cucumber-js --format @cucumber/pretty-formatter --format allure-cucumberjs/reporter",
    "install-browsers": "playwright install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf reports screenshots videos dist",
    "clean:allure": "rm -rf reports/allure-results reports/allure-report",
    "allure:generate": "allure generate allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "allure:serve": "allure serve allure-results",
    "setup": "npm run install-browsers && npm run clean"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "cucumber",
    "gherkin",
    "automation"
  ],
  "author": "Booklo Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@playwright/test": "^1.40.0",
    "@types/cucumber": "^6.0.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "allure-commandline": "^2.34.0",
    "allure-cucumberjs": "^3.2.2",
    "allure-js-commons": "^3.2.2",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
